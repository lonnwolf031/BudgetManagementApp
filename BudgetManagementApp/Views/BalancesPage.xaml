<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:data="clr-namespace:BudgetManagementApp.Data"
             x:Class="BudgetManagementApp.Views.BalancesPage"
             Title="Balances">

  <ContentPage.Content>
    <ListView x:Name="listView" SeparatorVisibility="None" ItemsSource="{x:Static local:BalancesViewModel.balances}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <SwitchCell Text="{Binding name}" On="{Binding isOn}" />
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentPage.Content>
  
</ContentPage>